{
  "name": "@will-stone/eslint-config",
  "version": "7.0.0",
  "description": "Will Stone's ESLint config",
  "keywords": [
    "eslint-config"
  ],
  "homepage": "https://github.com/will-stone/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/will-stone/eslint-config.git"
  },
  "license": "MIT",
  "author": "Will Stone",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --clean --dts --cjsInterop --splitting",
    "dev": "tsup src/index.ts --format esm,cjs --watch & eslint-flat-config-viewer",
    "lint": "npm run stub && eslint .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "stub": "tsup src/index.ts --format esm",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "astro-eslint-parser": "^0.16.3",
    "confusing-browser-globals": "^1.0.11",
    "eslint-config-flat-gitignore": "^0.1.3",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-i": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-switch-case": "^1.1.2",
    "eslint-plugin-tailwindcss": "^3.14.3",
    "eslint-plugin-unicorn": "^51.0.1",
    "glob": "^10.3.10",
    "globals": "^14.0.0",
    "globby": "^14.0.1",
    "load-json-file": "^7.0.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/confusing-browser-globals": "^1.0.3",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.25",
    "@will-stone/prettier-config": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-flat-config-viewer": "^0.1.11",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "type-fest": "^4.12.0",
    "typescript": "^5.4.2"
  },
  "peerDependencies": {
    "eslint": ">=8.57.0"
  }
}
